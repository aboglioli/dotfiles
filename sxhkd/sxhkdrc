#
# Launcher
#
super + Return
  st -e "tmux"

super + d
  rofi -show run

super + shift + d
  rofi -show windowcd

super + F12
  rofi -show window

Print
	scrot -q 100

#
# External
#
XF86AudioRaiseVolume
  pactl set-sink-volume 0 +5%

XF86AudioLowerVolume
  pactl set-sink-volume 0 -5%

XF86AudioMute
  pactl set-sink-mute 0 toggle

#
# bspwm + sxhkd
#
# general
super + Escape
	pkill -USR1 -x sxhkd

super + alt + {q,r}
	bspc {quit,wm -r}

super + {_,shift + }w
	bspc node -{c,k}

# navigation/selection
super + {Left,Down,Up,Right}
	bspc node -f {west,south,north,east}

super + {a,b,comma,period}
	bspc node -f @{parent,brother,first,second}

super + {_,shift + }Tab
	bspc node -f {next,prev}.local

super + {F1, F2}
	bspc monitor -f {prev,next}

super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

super + {1-9,0}
	bspc desktop -f '^{1-9,10}'

# layout
super + {t,shift + t}
	bspc node -t {tiled,pseudo_tiled}

super + space
  bspc node -t \~floating

super + f
  bspc node -t \~fullscreen

super + m
	bspc desktop -l next

# move/swap/resize/rotate
super + shift + {1-9,0}
	bspc node -d '^{1-9,10}'

super + {shift + , shift + ctrl + }{Left,Down,Up,Right}
	bspc node -{s,n} {west,south,north,east}

super + g
	bspc node -s biggest

super + shift + g
	bspc node -s biggest.local

super + {_,shift + }s
  bspc node -{s,n} newest.marked; \
  bspc node newest.marked -g marked=off

super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

super + ctrl + {1-9}
	bspc node -o 0.{1-9}

super + ctrl + space
	bspc node -p cancel

super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

super + r
  bspc node -R 90

super + {h,v}
  bspc node -F {horizontal,vertical}

super + shift + r : {Left,Right}
  INC={-10,+10}; bspc node @east -r $INC || bspc node @west -r $INC

super + shift + r : {Down,Up}
  INC={+10,-10}; bspc node @north -r $INC || bspc node @south -r $INC

super + {_,shift + }c
  bspc node --circulate {forward,backward}

# state
super + {x,z}
	bspc node -g {marked, sticky}

super + {_,shift + }minus
  bspc node {--equalize,--balance}
