#shades
draw_shades no

#position
gap_x 0
gap_y 20
alignment top_right

#behaviour
update_interval 1

#colour
default_color  FFFFFF
# default_shade_color 000000
own_window_colour 000000

#font
use_xft yes
xftfont Ubuntu:pixelsize=24

#to prevent window from moving
use_spacer no
minimum_size 350 0

