# Take screenshot
bindsym Print exec scrot ~/Imagenes/Screenshot/%Y-%m-%d_%s_$wx$h.png

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if avai
bar {
    status_command i3status
    mode dock
    position bottom
    font -*-anorexia-medium-*-*-*-11-*-*-*-*-*-*-*
    workspace_buttons yes
    colors {
        background #333333
        statusline #999999
        focused_workspace #777777 #777777 #f5f5f5
        active_workspace #777777 #777777 #f5f5f5
        inactive_workspace #333333 #333333 #666666
        urgent_workspace #2e3436 #9a878f
    }
}

# MY THINGS
new_window pixel 2
new_float pixel 2
focus_follows_mouse no
force_focus_wrapping yes

## THEME ###
set $FOCUS #dd0000
set $UNFOCUS #49524a
set $INACTIVE #999999
set $FOCUS_TEXT #eeeeee
set $UNFOCUS_TEXT #aaaaaa

# Layout colors 	    bord 	bg 		text    indicator (split)
client.focused 			$FOCUS $FOCUS $FOCUS_TEXT $FOCUS
client.focused_inactive $INACTIVE $INACTIVE $FOCUS_TEXT $INACTIVE
client.unfocused 		$UNFOCUS $UNFOCUS $UNFOCUS_TEXT $UNFOCUS
client.urgent 			$FOCUS $FOCUS $FOCUS_TEXT $FOCUS
client.background 		$UNFOCUS


