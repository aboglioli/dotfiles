# Take screenshot
bindsym Print exec scrot ~/Imagenes/Screenshot/%Y-%m-%d_%s_$wx$h.png

# THEME
set $FOCUS #ee6c4d
set $UNFOCUS #424242
set $INACTIVE #727272
set $FOCUS_TEXT #000000
set $UNFOCUS_TEXT #aaaaaa

bar {
    status_command i3status
    mode dock
    position bottom
    workspace_buttons yes
    colors {
        background #424242
        statusline #ffffff
        focused_workspace #c75252 #c75252 #000000
        active_workspace #424242 #424242 #ffffff
        inactive_workspace #424242 #424242 #aaaaaa
        urgent_workspace #2e3436 #9a878f
    }
}

#Layout
client.focused            $FOCUS      $FOCUS      $FOCUS_TEXT     $FOCUS
client.focused_inactive   $INACTIVE   $INACTIVE   $FOCUS_TEXT     $INACTIVE
client.unfocused          $UNFOCUS    $UNFOCUS    $UNFOCUS_TEXT   $UNFOCUS
client.urgent             $FOCUS      $FOCUS      $FOCUS_TEXT     $FOCUS
client.background         $UNFOCUS


# MY THINGS
new_window pixel 3
new_float pixel 3
focus_follows_mouse yes
force_focus_wrapping yes

